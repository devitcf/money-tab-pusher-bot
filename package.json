    "dotenv": "^16.4.5",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/node-telegram-bot-api": "^0.64.6",
    "pre-commit": "^1.2.2",
